<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/colom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_produk"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/img_produk"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bango Kecap Reff 600"
                android:layout_marginLeft="@dimen/margin_card"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_deskripsi_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum is simply dummy text of"
                android:layout_marginLeft="@dimen/margin_card"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_stok_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok : 25 pcs"
                android:layout_marginLeft="@dimen/margin_card"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/colom1"
        android:background="@color/colorBorder"/>

    <RelativeLayout
        android:id="@+id/colom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@+id/view">

        <TextView
            android:id="@+id/tv_harga_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Rp. 4.000 /pcs"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_min_qty"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorMinusButton"
                android:text="-"/>

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="1"/>

            <Button
                android:id="@+id/btn_add_qty"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorPlusButton"
                android:text="+"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/colom2"
        android:background="@color/colorBorder" />

    <Button
        android:id="@+id/btn_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/view2"
        android:text="SELESAI"/>

</RelativeLayout>